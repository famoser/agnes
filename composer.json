{
  "name": "famoser/agnes",
  "description": "Creates & deploys releases safely to various environments.",
  "support": {
    "issues": "https://github.com/famoser/agnes/issues",
    "source": "https://github.com/famoser/agnes"
  },
  "authors": [
    {
      "name": "Florian Moser",
      "email": "git@famoser.ch"
    }
  ],
  "bin": [
    "bin/agnes"
  ],
  "license": "MIT",
  "require": {
    "ext-json": "*",
    "ext-zip": "*",
    "guzzlehttp/guzzle": "^7.2",
    "symfony/console": "^4.3 || ^5.0 || ^6.0 || ^7.0",
    "symfony/dotenv": "^4.3 || ^5.0 || ^6.0 || ^7.0",
    "symfony/yaml": "^4.3 || ^5.0 || ^6.0 || ^7.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3"
  },
  "autoload": {
    "psr-4": {
      "Agnes\\": "src"
    },
    "classmap": [
      "src"
    ]
  },
  "scripts": {
    "configure-environment": [
      "touch .env.local"
    ],
    "pre-install-cmd": "@configure-environment",
    "pre-update-cmd": "@configure-environment"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.0"
    }
  }
}
